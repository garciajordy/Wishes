<nav class="login-nav pt-2 navbar-top">
    <div class=" d-flex">
        <div class="col-4"><a href="/users/<%=current_user.id%>"><i class="fa fa-bars" aria-hidden="true"></i></a></div>
        <div class="col-4 groups-div">My Wishlist</div>
    </div>
    <div class="d-flex justify-content-end pt-2 pb-0 mb-0">
        <p class="mr-4 recent mb-1">Most Recent</p>
        <a href="wishlists/index" class="mr-1 recent mb-1 inactive">Most Ancient</a>
    </div>
</nav>
<div class="p-4"></div>
<div class="extra">
    <% @wishes.each do |wish| %>
    <div class="wish-items row">
        <div class="col-6">
            <p> <%= wish.name %></p>
            <p>$ <%= wish.amount %></p>
            <p> <%= wish.created_at.strftime("%b %d, %Y") %></p>
            <p><%= paidornot(wish)%></p>
        </div>
        <div class="col-6">
            <img class="w-100" src="<%=imageurl((Group.where(id: wish.group_id).first))%>">
            <%= (Group.where(id: wish.group_id).first).name%>
        </div>
    </div>
    <% end %>
</div>